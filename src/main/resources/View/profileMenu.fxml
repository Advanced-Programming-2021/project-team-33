<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>


<?import javafx.scene.image.ImageView?>
<?import java.net.URL?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ProfileMenu">
    <ImageView fx:id="background">
    </ImageView>
    <top>
        <VBox>
            <HBox alignment="CENTER">
                <Label fx:id="showError"/>
            </HBox>
            <HBox>
                <Circle fx:id="profile" radius="80.0" stroke="Blue">
                </Circle>
            </HBox>
            <HBox>
                <Label fx:id="userName"/>
            </HBox>
            <HBox>
                <Label fx:id="nickName"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox fx:id="vBoxInProfileMenu" alignment="CENTER">

        </VBox>
    </center>
    <bottom>
        <HBox layoutX="2" layoutY="680">
            <Button text="Back" style="-fx-background-color: red;-fx-text-fill: white;-fx-font-size: 20"
                    onMouseClicked="#back"/>
        </HBox>
    </bottom>
    <stylesheets>
        <URL value="@../css/deckMenu.css"/>
    </stylesheets>
</BorderPane>
